generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
	id					String		@id @default(auto()) @map("_id") @db.ObjectId
	firstName		String?
	lastName		String?
	username		String		@unique
	email				String		@unique
	password		String
	createdAt		DateTime	@default(now())
	updatedAt		DateTime	@updatedAt

	@@map("users")	
}
